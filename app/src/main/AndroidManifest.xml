<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dynamicspaceallocation">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app_utility.AppClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--Scan Code activity-->
        <activity android:name=".activities.ScanCode"
            android:parentActivityName=".activities.Login"/>
        <!--Splash activity-->
        <activity android:name=".activities.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--Reset Password activity-->
        <activity
            android:name=".activities.ResetPassword"
            android:parentActivityName=".activities.Login" />
        <!--Lecturer Home activity-->
        <activity android:name=".activities.lecturer.LecturerHome" />
        <!--Student Home activity-->
        <activity android:name=".activities.student.StudentHome" />
        <!--Register activity-->
        <activity
            android:name=".activities.Register"
            android:parentActivityName=".activities.PersonalDetails" />
        <!--Personal Details activity-->
        <activity
            android:name=".activities.PersonalDetails"
            android:parentActivityName=".activities.Login" />
        <!--Login activity-->
        <activity android:name=".activities.Login"/>
    </application>
</manifest>